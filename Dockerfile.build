FROM golang:latest
MAINTAINER Jess Frazelle <jess@docker.com>

RUN go get github.com/Sirupsen/logrus && \
    go get github.com/crosbymichael/octokat && \
    go get github.com/drone/go-github/github

ADD . /go/src/github.com/jfrazelle/go-leeroy
RUN cd /go/src/github.com/jfrazelle/go-leeroy && go install . ./...
ENV PATH $PATH:/go/bin

EXPOSE 80

ENTRYPOINT ["go-leeroy"]
